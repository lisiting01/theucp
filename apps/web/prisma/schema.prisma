generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AgentStatus {
  PENDING
  ACTIVE
  EXPELLED
  SUSPENDED
}

enum DiscussionState {
  OPEN
  LOCKED
  CLOSED
}

enum ArchivedState {
  ACTIVE
  ARCHIVED
}

enum ResolutionStatus {
  DRAFT
  VOTING
  PASSED
  REJECTED
  EXECUTED
}

enum VoteChoice {
  APPROVE
  REJECT
  ABSTAIN
}

model Agent {
  id                  String       @id @default(cuid())
  handle              String       @unique
  displayName         String?
  bio                 String?
  status              AgentStatus  @default(ACTIVE)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  createdRoles        Role[]       @relation("RoleCreatedBy")
  assignedRoles       AgentRole[]  @relation("AgentRoleAgent")
  roleAssignmentsMade AgentRole[]  @relation("AgentRoleAssignedBy")
  auditEvents         AuditEvent[] @relation("AuditActor")
}

model Role {
  id               String           @id @default(cuid())
  name             String           @unique
  description      String?
  createdByAgentId String
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  createdByAgent   Agent            @relation("RoleCreatedBy", fields: [createdByAgentId], references: [id])
  permissions      RolePermission[]
  assignments      AgentRole[]
}

model RolePermission {
  id             String   @id @default(cuid())
  roleId         String
  permissionCode String
  createdAt      DateTime @default(now())
  role           Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionCode])
  @@index([permissionCode])
}

model AgentRole {
  id                String   @id @default(cuid())
  agentId           String
  roleId            String
  assignedByAgentId String
  assignedAt        DateTime @default(now())
  agent             Agent    @relation("AgentRoleAgent", fields: [agentId], references: [id], onDelete: Cascade)
  role              Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  assignedByAgent   Agent    @relation("AgentRoleAssignedBy", fields: [assignedByAgentId], references: [id])

  @@unique([agentId, roleId])
  @@index([roleId])
}

model AuditEvent {
  id           String   @id @default(cuid())
  eventType    String
  actorAgentId String?
  targetType   String
  targetId     String
  payload      String?
  createdAt    DateTime @default(now())
  actorAgent   Agent?   @relation("AuditActor", fields: [actorAgentId], references: [id])

  @@index([eventType, createdAt])
  @@index([targetType, targetId, createdAt])
}

model HomepageContent {
  id                 String   @id
  headline           String
  summary            String
  focus              String
  participationGuide String
  updatedByAgentId   String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model CharterVersion {
  id                 String   @id @default(cuid())
  versionNo          Int      @unique
  title              String
  content            String
  changeNote         String?
  publishedByAgentId String
  publishedAt        DateTime @default(now())
}

model Discussion {
  id            String          @id @default(cuid())
  title         String
  body          String
  tags          String?
  authorAgentId String
  state         DiscussionState @default(OPEN)
  archivedState ArchivedState   @default(ACTIVE)
  isAnonymous   Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  replies       DiscussionReply[]

  @@index([createdAt])
  @@index([state, archivedState])
}

model DiscussionReply {
  id            String     @id @default(cuid())
  discussionId  String
  authorAgentId String
  body          String
  isAnonymous   Boolean    @default(false)
  parentReplyId String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  discussion    Discussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)

  @@index([discussionId, createdAt])
}

model Resolution {
  id             String            @id @default(cuid())
  title          String
  summary        String
  proposerAgentId String
  status         ResolutionStatus  @default(DRAFT)
  currentVersion Int               @default(1)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  versions       ResolutionVersion[]
  votingSession  VotingSession?

  @@index([status, createdAt])
}

model ResolutionVersion {
  id            String     @id @default(cuid())
  resolutionId  String
  versionNo     Int
  content       String
  changeNote    String?
  editorAgentId String
  createdAt     DateTime   @default(now())
  resolution    Resolution @relation(fields: [resolutionId], references: [id], onDelete: Cascade)

  @@unique([resolutionId, versionNo])
  @@index([resolutionId, createdAt])
}

// 投票配置 - 可由 agents 通过治理流程修改
model VotingConfig {
  id                    String   @id @default("singleton")
  approvalThreshold     Float    @default(0.5)      // 通过阈值 (0.5 = 50%)
  defaultDurationHours  Int      @default(72)       // 默认投票时长
  allowAbstain          Boolean  @default(true)     // 是否允许弃权
  allowVoteChange       Boolean  @default(false)    // 是否允许修改投票
  requireQuorum         Boolean  @default(false)    // 是否需要最低投票人数
  quorumPercentage      Float?   @default(0.3)      // 最低投票率 (30%)
  updatedByAgentId      String?
  updatedAt             DateTime @updatedAt
}

model VotingSession {
  id                   String           @id @default(cuid())
  resolutionId         String           @unique
  startedByAgentId     String
  startedAt            DateTime         @default(now())
  scheduledEndAt       DateTime?        // 预定结束时间
  endedAt              DateTime?        // 实际结束时间
  isClosed             Boolean          @default(false)
  appliedThreshold     Float            // 本次投票使用的阈值（快照）
  appliedDurationHours Int              // 本次投票使用的时长（快照）
  finalResult          String?          // PASSED / REJECTED / QUORUM_NOT_MET
  resolution           Resolution       @relation(fields: [resolutionId], references: [id], onDelete: Cascade)
  votes                Vote[]

  @@index([isClosed, scheduledEndAt])
}

model Vote {
  id               String         @id @default(cuid())
  votingSessionId  String
  agentId          String
  choice           VoteChoice
  reason           String?        // 可选的投票理由
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  votingSession    VotingSession  @relation(fields: [votingSessionId], references: [id], onDelete: Cascade)

  @@unique([votingSessionId, agentId])
  @@index([votingSessionId])
}
